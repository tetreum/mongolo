{% block dualColumn %}
    <div id="wrapper">
        <div id="left-column">
            <h2>Mongo.lo</h2>
            <div id="menu">
                <a href="/" title="{% trans %}Home{% endtrans %}"><i class="fa fa-home"></i></a>
                <a href="#" title="{% trans %}Config{% endtrans %}"><i class="fa fa-cog"></i></a>
                <a href="http://github.com/tetreum/mongolo/wiki" target="_blank" data-noajax title="{% trans %}Help{% endtrans %}"><i class="fa fa-question"></i></a>
                <a href="{{ path_for('logout') }}" data-noajax title="{% trans %}Logout{% endtrans %}"><i class="fa fa-sign-out"></i></a>
            </div>
            <div id="navigation-tree">
                <ul>
                </ul>
            </div>
        </div>

        <div id="main-container">
            {{ block('content') }}
        </div>
    </div>


    <template id="tpl-tree-db">
        <li data-type="db" class="tree-db">
            <span class="tree-expander"></span>
            <span class="tree-name"></span>
            <ul style="display: none">
                <li data-action="new-collection">
                    <a href="{{ path_for('collectionCreate') }}">
                        <i class="fa fa-plus-circle"></i>
                        {% trans %}New collection{% endtrans %}
                    </a>
                </li>
            </ul>
        </li>
    </template>

    <template id="tpl-tree-collection">
        <li data-type="collection" class="tree-collection">
            <a href="{{ path_for('collectionEntries') }}">
                <i class="fa fa-table"></i>
                <span class="tree-name"></span>
            </a>
        </li>
    </template>


{% endblock %}
{% extends isAjax ? "common/ajaxbase.html.twig" : "common/base.html.twig" %}

{% block content %}
<h2>{% trans %}Index list{% endtrans %}</h2>

<button data-action="show-create-form">{% trans %}New{% endtrans %}</button>
<div id="create-index-form" class="box">
    <form method="post">
        <label>{% trans %}Name{% endtrans %}: <input name="name" type="text"></label>
        {% trans %}Fields{% endtrans %}:
        <ul>
        </ul>
        <button data-action="add-field">+</button>
        <label>{% trans %}Unique{% endtrans %}: <input name="unique" type="checkbox"></label>
        <button>{% trans %}Create{% endtrans %}</button>
    </form>
</div>
<table class="index-list">
  <tr>
    <th>{% trans %}Name{% endtrans %}</th>
    <th>{% trans %}Fields{% endtrans %}</th>
    <th>{% trans %}Type{% endtrans %}</th>
    <th>{% trans %}Options{% endtrans %}</th>
  </tr>
    {% for entry in indexes %}
  <tr>
    <td>{{ entry.name }}</td>
    <td><pre>{{ entry.fields }}</pre></td>
    <td>{{ entry.type }}</td>
    <td>
        {% if entry.name != "_id_" %}
            <span class="red-link" data-name="{{ entry.name }}" data-action="delete">{% trans %}Delete{% endtrans %}</span>
        {% endif %}
    </td>
  </tr>
    {% endfor %}
</table>
<template id="tpl-index-field">
    <li>
        <input name="fields[]" type="text">
        <select name="order[]"><option value="1">asc</option><option value="-1">desc</option><option value="2dsphere">2dsphere</option></select>
    </li>
</template>
{% endblock %}
{% block bottomJS %}
<script>
    $(function() {
        $('[data-action=show-create-form]').on("click", function () {
            $('#create-index-form').toggle();
        });
        $('[data-action=add-field]').on("click", function (e) {
            e.preventDefault();

            var $template = mongolo.utils.getTemplate("index-field");
            $('#create-index-form ul').append($template);
        });
        $('[data-action=delete]').on("click", function () {
            var name = $(this).data("name");

            mongolo.navigation.showConfirm("Â¿Do you wanna delete this index? '" + name + "'", function () {
                mongolo.api("index/delete", {db: $_GET("db"), collection: $_GET("collection"), name: name}, function (data) {
                    if (data.error > 0) {
                        return false;
                    }
                    mongolo.navigation.reload();
                });
            });
        });
        $('#create-index-form form').on("submit", function (e)
        {
            e.preventDefault();

            var name = $('[name=name]').val(),
                sortList = $("[name='fields[]'"),
                sortOrderList = $("[name='order[]'"),
                unique = $('[name="unique"]').is(":checked"),
                i = 0,
                fields = {};

                while (i < sortList.length) {
                    var row = $(sortList[i]).val();
                    if (row) {
                        fields[row] = $(sortOrderList[i]).val();
                    }
                    i++;
                }

            mongolo.api("index/create", {db: $_GET("db"), collection: $_GET("collection"), name: name, fields: fields, unique: unique}, function (data) {
                if (data.error > 0) {
                    return false;
                }
                mongolo.navigation.reload();
            });
        });

        $('[data-action=add-field]').click();
    });
</script>
{% endblock %}
